@model TechWriteServer.ViewModels.BlogViewModel
@if (Model.BlogComments != null && Model.BlogComments.Count > 0)
{
    <div class="comments-section">
        <h5>Comments</h5>
        <ul class="list-group">
            @foreach (var comment in Model.BlogComments)
            {
                <li class="list-group-item">
                    <strong>Deeksha</strong> @comment.Comment
                    <br />
                    <small>Posted on @comment.CommentDate</small>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="no-comments">
        <p>No comments yet. Be the first to comment!</p>
    </div>
}

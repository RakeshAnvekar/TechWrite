@{
    Layout = "_Layout";
    var statusCode = ViewBag.StatusCode;
}
@if (statusCode == 403 || statusCode == 401)
{
    <img src="/Images/403ErrorImage.png" style="height: 333px; width: 441px;" />
}
else if (statusCode == 500)
{
    <img src="/Images/500InternalServerError.png" style="height: 333px; width: 441px;" />
}
else if (statusCode == 404)
{
    <img src="/Images/404PageNotFoundError.png" style="height: 333px; width: 441px;" />
}
else
{
    <h5 style="color:red">We encountered an issue. The team is working on it. Please try again later.</h5>
    <img src="/Images/DefaultErrorPage.jpg" style="height: 300px; width: 350px;" />
}

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //Server=DESKTOP-QE7LBJN\\SQLEXPRESS; Database=TechWriteBdServer; Integrated Security=True;TrustServerCertificate=True;
  "ConnectionStrings": {
    "ConnectionString": "Your_Connection_String_Here"
  },
  "Jwt": {
    //Issuer is the application that issues/provides/returns the JWT token.
    "Issuer": "https://localhost:7137/",
    //Target Audience who is going to access the token.
    "Audience": "https://localhost:7137/",
    //GUID
    "Secret": "81A36F06-B980-4598-BABF-6F647D5E420F",
    "Subject": "JwtSubject"

  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "MyApp"
    }
  }
}
